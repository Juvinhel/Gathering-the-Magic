<celestial.controls:AdornerDialog
    x:Class="Gathering_the_Magic.DeckEdit.UI.ConfigDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:celestial.components="clr-namespace:Celestial.Components;assembly=Celestial"
    xmlns:celestial.controls="clr-namespace:Celestial.Controls;assembly=Celestial"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Gathering_the_Magic.DeckEdit.UI"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Padding="20"
    d:DesignHeight="450"
    d:DesignWidth="800"
    Background="{StaticResource Celestial.Brushes.Background}"
    Loaded="configDialog_Loaded"
    mc:Ignorable="d">
    <Grid>
        <Grid VerticalAlignment="Center">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <celestial.components:InputFolderHeader
                x:Name="repositoryFolderHeader"
                Title="Repository Folder: "
                Grid.Row="0"
                Padding="0"
                Background="Transparent"
                SharedSizeGroup="A" />
        </Grid>

        <UniformGrid VerticalAlignment="Bottom" Rows="1">
            <Button
                x:Name="cancelButton"
                Grid.Row="1000"
                Click="cancelButton_Click"
                Content="Cancel"
                FontSize="16" />
            <Button
                x:Name="okButton"
                Grid.Row="1000"
                Click="okButton_Click"
                Content="OK"
                FontSize="16" />
        </UniformGrid>
    </Grid>
</celestial.controls:AdornerDialog>
